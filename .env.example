# Application environment configuration
APP_ENV=development
APP_NAME=FlowBiz AI Core
FLOWBIZ_VERSION=0.1.0
FLOWBIZ_GIT_SHA=local-dev
# Optional build metadata
# FLOWBIZ_BUILD_TIME=2024-01-01T00:00:00Z
# Legacy variables are still supported but deprecated:
# APP_VERSION=0.1.0
# GIT_SHA=local-dev
# BUILD_TIME=2024-01-01T00:00:00Z
APP_LOG_LEVEL=INFO
APP_DATABASE_URL=postgresql://localhost:5432/flowbiz
APP_CORS_ALLOW_ORIGINS=http://localhost:3000
APP_CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE
APP_CORS_ALLOW_HEADERS=Content-Type,Authorization
APP_CORS_ALLOW_CREDENTIALS=false
APP_API_HOST=0.0.0.0
APP_API_PORT=8000

# Postgres (docker-compose)
POSTGRES_USER=flowbiz
POSTGRES_PASSWORD=flowbiz
POSTGRES_DB=flowbiz
