# TikTok Live Client Service - API Gateway
# Subdomain: tiktoklive.flowbiz.cloud
# Upstream: http://api:8000 (Docker network)
# Using core API temporarily until client is deployed

# HTTP server - redirect to HTTPS
server {
  listen 80;
  server_name tiktoklive.flowbiz.cloud;
  server_tokens off;

  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

# HTTPS server (production)
server {
  listen 443 ssl http2;
  server_name tiktoklive.flowbiz.cloud;
  server_tokens off;

  # SSL certificates
  ssl_certificate /etc/letsencrypt/live/tiktoklive.flowbiz.cloud/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/tiktoklive.flowbiz.cloud/privkey.pem;

  # SSL configuration
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 10m;

  # Security headers (inline to avoid snippet dependencies)
  add_header X-Content-Type-Options "nosniff" always;
  add_header X-Frame-Options "DENY" always;
  add_header Referrer-Policy "no-referrer" always;
  add_header X-XSS-Protection "1; mode=block" always;
  add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;

  # Proxy timeouts
  proxy_connect_timeout 2s;
  proxy_read_timeout 30s;
  proxy_send_timeout 30s;

  # Proxy to API (Docker network service name)
  location / {
    proxy_pass http://api:8000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Connection "";
    proxy_buffering off;
    proxy_request_buffering off;
  }
}
